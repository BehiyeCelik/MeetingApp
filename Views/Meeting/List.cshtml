@model List<UserInfo>
@{
    ViewBag.Title = "Participants Lists";
}
<main class="text-center">
    <h1 class="h4">Meeting Attendance List</h1>
    <table class="table table-bordered"> <!--bootstrap sınıfları bu tabloya uygulanacak ve bordered olacak ki köeler yuvarlatılmış olsun -->
        <thead>
            <tr>
                <td>Name</td>
                <td>Attendance Status</td>
                <td>Detail</td>
            </tr>
        </thead>
        <tbody>
            @{int i = 0; }

            @foreach(var user in Model){

            var statement = user.WillYouAttend == true? "Yes":"No";
            var className = user.WillYouAttend == true? "table-success" : "table-danger";

            if(user.WillYouAttend == true)
            {
                i++;
            
            }
            <tr class="@className">
                <td>@user.Name</td>
                <td>@statement</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/meeting/details/@user.Id">Detail</a>
                </td>
            </tr>
        }   
        </tbody>
    </table>
    <div class="card">
        <div class="card-body">
            <span>Number of Attendances: @i</span>
        </div>
    </div>
</main>