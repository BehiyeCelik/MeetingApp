@model UserInfo
@{
    ViewBag.Title = "Meeting Details"; 
}
<main class="text-center">
    <h1 class="h4">Attendances Details</h1>
    @if(Model.WillYouAttend == true)
    {
        <p>Thank you @Model.Name, @ViewBag.UserCount people will attent the meeting with you</p>
        <a class="btn btn-sm btn-outline-primary" href="/meeting/list">Show Attendance List</a>
    } else
    {
        <p>@Model.Name, Sorry:(</p>
        <a class="btn btn-sm btn-outline-primary" href="/meeting/apply">Application Form</a>
    }
   
</main>